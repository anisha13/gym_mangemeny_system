@model Gym.Models.Entity.EquipmentEntity
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Layout/_mainlayout.cshtml";
}

<h3 style="color:#008080; margin-bottom:0px;">New equipment</h3>
<hr style="width :100%;color :#008080;" />

@using (Html.BeginForm("Saveequipment", "equipment", FormMethod.Post,

            new
            {
                enctype = "multipart/form-data"
            }
                ))
{
    @Html.AntiForgeryToken();
	<div class="row">
		<div class="col-sm-12 col-lg-12">
			<div class="card-box">
				<div class="row">
					<div class="col-md-6">
						<form class="form-horizontal" role="form">
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.equipment_id)</div>
									Id @Html.EditorFor(m => m.equipment_id, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.equipment_name)</div>
									Name @Html.EditorFor(m => m.equipment_name, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.equipment_quantity)</div>
									Quantity @Html.EditorFor(m => m.equipment_quantity, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.equipment_cost)</div>
									Cost @Html.EditorFor(m => m.equipment_cost, new { htmlAttributes =  new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">

									<div>@Html.ValidationMessageFor(m => m.equipment_photo)</div>
									Photo <input type="file" name="Photofile" required>
								</div>
							</div>
							<div class="form-group text-center m-t-40">
								<div class="col-xs-12">
									<button class="btn btn-primary btn-rounded waves-effect waves-light" type="submit">Submit</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
}

<p>
    @Html.ActionLink("Back to Manager", "Index", "equipment", null, new { @class = "menu" })
</p>