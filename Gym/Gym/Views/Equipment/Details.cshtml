@model Gym.Models.Entity.EquipmentEntity
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layout/_mainlayout.cshtml";
}


<div class="card-box">
	<table>
		<h3 style="color:#008080; margin-bottom:0px;">Detail equipment</h3>
		<hr style="width :100%;color :#008080;" />
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.equipment_id)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.equipment_id)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.equipment_name)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.equipment_name)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.equipment_quantity)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.equipment_quantity)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.equipment_cost)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.equipment_cost)
			</td>
		</tr>

		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.equipment_photo)
			</td>
			<td width="200px">
				<img src="@Url.Content(@Model.equipment_photo)" style="max-height:300px;max-width:300px" />
			</td>
		</tr>


	</table>
	</div>
<p>
	<i class="md md-arrow-back"></i> @Html.ActionLink("Back to Manager", "Index", "Equipment", null, new { @class = "menu" })
</p>