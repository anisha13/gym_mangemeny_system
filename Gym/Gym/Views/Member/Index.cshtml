@model Gym.Models.Entity.MemberEntity
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/Style/StyleSheet1.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body bgcolor="#008080">
    <table width="450" align="center" border="1" bordercolor="#008080" cellpadding="20" bgcolor="#ffffff">
        <tr>
            <td class="header"> Fitness Club</td>
        </tr>
        <tr>
            <td>
                <h3 style="color:#008080; margin-bottom:0px;">Login...</h3>
                <hr style="width :100%;color :#008080;" />

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken();
                    <table>
                        <tr>
                            <td colspan="2">
                                @Html.ValidationSummary(true, "")
                            </td>
                        </tr>
                        <tr>
                            <td width="100px">
                                @Html.LabelFor(m => m.customer_username)
                                @Html.ValidationMessageFor(m => m.customer_id)
                            </td>
                            <td width="200px">
                                @Html.EditorFor(m => m.customer_username)
                            </td>
                        </tr>
                        <tr>
                            <td width="100px">
                                @Html.LabelFor(m => m.customer_password)
                            </td>
                            <td width="200px">
                                @Html.PasswordFor(m => m.customer_password)
                            </td>
                        </tr>
                        <tr>
                            <td width="100px">
                                @Html.LabelFor(m => m.Type)
                            </td>
                            <td width="200px">
                                @Html.DropDownListFor(m => m.Type, new List<SelectListItem>
                    {
                        new SelectListItem { Text="Admin", Value="Admin" },
                        new SelectListItem { Text="User", Value="User" }
           }, new { @style = "width: 174px;" })
                            </td>
                        </tr>
                        <tr>
                            <td width="100px"></td>
                            <td width="200px">
                                <input type="submit" value="Login" />
                            </td>
                        </tr>
                    </table>
                }
            </td>>
        </tr>
    </table>
</body>
</html>
