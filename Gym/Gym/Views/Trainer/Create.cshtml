@model Gym.Models.Entity.TrainerEntity
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Layout/_mainlayout.cshtml";
}

<h3 style="color:#008080; margin-bottom:0px;">New Trainer</h3>
<hr style="width :100%;color :#008080;" />

@using (Html.BeginForm("Savetrainer", "trainer", FormMethod.Post,

new
{
    enctype = "multipart/form-data"
}
    ))
{
    @Html.AntiForgeryToken();
	<div class="row">
		<div class="col-sm-12 col-lg-12">
			<div class="card-box">
				<div class="row">
					<div class="col-md-6">
						<form class="form-horizontal" role="form">
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.trainer_id)</div>
									Id @Html.EditorFor(m => m.trainer_id, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.trainer_name)</div>
									Trainer Name @Html.EditorFor(m => m.trainer_name, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.trainer_contact)</div>
									Contact @Html.EditorFor(m => m.trainer_contact, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.trainer_address)</div>
									Address @Html.EditorFor(m => m.trainer_address, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.trainer_photo)</div>
									Photo <input type="file" name="PhotoFile" required />
								</div>
							</div>
							<div class="form-group text-center m-t-40">
								<div class="col-xs-12">
									<button class="btn btn-primary btn-rounded waves-effect waves-light" type="submit" value="create">Add</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
}

<p>
    <i class="md md-arrow-back"></i> @Html.ActionLink("Back to Manager", "Index", "trainer", null, new { @class = "menu" })
</p>