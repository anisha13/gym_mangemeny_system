@model Gym.Models.Entity.TrainerEntity
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layout/_mainlayout.cshtml";
}



<div class="card-box">
	<table>
		<h3 style="color:#008080; margin-bottom:0px;">Detail trainer</h3>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.trainer_id)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.trainer_id)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.trainer_name)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.trainer_name)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.trainer_contact)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.trainer_contact)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.trainer_address)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.trainer_address)
			</td>
		</tr>

		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.trainer_photo)
			</td>
			<td width="200px">
				<img src="@Url.Content(@Model.trainer_photo)" style="max-height:300px;max-width:300px" />
			</td>
		</tr>


	</table>
	</div>
<p>
	<i class="md md-arrow-back"></i> @Html.ActionLink("Back to Manager", "Index", "Trainer", null, new { @class = "menu" })
</p>