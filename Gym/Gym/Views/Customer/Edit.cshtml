@model Gym.Models.Entity.CustomerEntity
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Layout/_mainlayout.cshtml";
}

<h3 style="color:#008080; margin-bottom:0px;">New Customer</h3>
<hr style="width :100%;color :#008080;" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <table>
        <tr>
            <td colspan="2">
                @Html.ValidationSummary(true, "")
            </td>
        </tr>
        <tr>
            <td width="100px">
                @Html.HiddenFor(m => m.customer_id)
                @Html.LabelFor(m => m.customer_fullname)
            </td>
            <td width="200px">
                @Html.EditorFor(m => m.customer_fullname)
            </td>
        </tr>
        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.customer_address)
            </td>
            <td width="200px">
                @Html.EditorFor(m => m.customer_address)
            </td>
        </tr>

        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.customer_phone)
            </td>
            <td width="200px">
                @Html.EditorFor(m => m.customer_phone)
            </td>
        </tr>

        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.customer_photo)
            </td>
            <td width="200px">
                @Html.EditorFor(m => m.customer_photo)
            </td>
        </tr>

        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.customer_gender)
            </td>
            <td width="200px">
                @Html.DropDownListFor(m => m.customer_gender, new List<SelectListItem>
                    {
                        new SelectListItem { Text="Male", Value="Male" },
                        new SelectListItem { Text="Female", Value="Female" },
                       
           }, new { @style = "width: 174px;" })


            </td>
        </tr>

        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.customer_joindate)
            </td>
            <td width="200px">
                @Html.EditorFor(m => m.customer_joindate)
            </td>
        </tr>

        
        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.trainer_id)
            </td>
            <td width="200px">
                @Html.DropDownListFor(m => m.trainer_id, new SelectList(ViewBag.trainerList, "trainer_id", "trainer_name"), new { @style = "width: 174px;" });

            </td>
        </tr>
        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.plan_id)
            </td>
            <td width="200px">
                @Html.DropDownListFor(m => m.plan_id, new SelectList(ViewBag.planList, "plan_id", "plan_name"), new { @style = "width: 174px;" });


            </td>
        </tr>
        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.customer_username)
            </td>
            <td width="200px">
                @Html.EditorFor(m => m.customer_username)
            </td>
        </tr>
        <tr>
            <td width="100px">
                @Html.LabelFor(m => m.customer_password)
            </td>
            <td width="200px">
                @Html.EditorFor(m => m.customer_password)
            </td>
        </tr>

        <tr>
            <td width="100px"></td>
            <td width="200px">
                <input type="submit" value="Edit" />
            </td>
        </tr>
    </table>
}

<p>
    @Html.ActionLink("Back to Manager", "Index", "Customer", null, new { @class = "menu" })
</p>