@model Gym.Models.Entity.CustomerEntity
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layout/_mainlayout.cshtml";
}


<div class="card-box">
	<table>
		<h3 style="color:#008080; margin-bottom:0px;">Detail Customer</h3>
		<hr style="width :100%;color :#008080;" />
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.customer_id)

			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.customer_id)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.customer_fullname)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.customer_fullname)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.customer_address)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.customer_address)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.customer_phone)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.customer_phone)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.customer_photo)
			</td>
			<td width="200px">
				<img src="@Url.Content(@Model.customer_photo)" style="max-height:200px;max-width:300px" />

			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.customer_gender)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.customer_gender)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.customer_joindate)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.customer_joindate)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.trainer_id)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.trainer_id)




			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.plan_id)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.plan_id)


			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.customer_username)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.customer_username)
			</td>
		</tr>
		<tr>
			<td width="100px">
				@Html.LabelFor(m => m.customer_password)
			</td>
			<td width="200px">
				@Html.DisplayFor(m => m.customer_password)
			</td>
		</tr>


	</table>
</div>
<p>
	<i class="md md-arrow-back"></i> @Html.ActionLink("Back to Manager", "Index", "Customer", null, new { @class = "menu" })
</p>