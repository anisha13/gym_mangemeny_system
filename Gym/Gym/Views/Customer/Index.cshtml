@model IEnumerable<Gym.Models.Entity.CustomerEntity>
@{
	ViewBag.Title = "Customers";
	Layout = "~/Views/Layout/_mainlayout.cshtml";
}

<h3 style="color:#008080; margin-bottom:0px;">Customers Manager</h3>
<hr style="width :100%;color :#008080;" />
<p class="btn btn-default btn-custom btn-rounded waves-effect waves-light">
	@if (HttpContext.Current.User.IsInRole("Admin"))
	{
		@Html.ActionLink("New Customer", "Create", null, new { @class = "menu" })}
</p>
<div class="row">
	<div class="col-sm-12">
		<div class="card-box table-responsive">
			<table id="datatable" class="table table-striped table-bordered">
				<tr>
					<th>@Html.DisplayNameFor(m => m.customer_fullname)</th>
					<th>@Html.DisplayNameFor(m => m.customer_address)</th>
					<th>@Html.DisplayNameFor(m => m.customer_phone)</th>

					<th>@Html.DisplayNameFor(m => m.customer_gender)</th>
					<th>@Html.DisplayNameFor(m => m.customer_joindate)</th>
					<th>@Html.DisplayNameFor(m => m.trainer_name)</th>
					<th>@Html.DisplayNameFor(m => m.plan_name)</th>
					<th>@Html.DisplayNameFor(m => m.customer_username)</th>
					<th>@Html.DisplayNameFor(m => m.customer_password)</th>



					<th>Options</th>
				</tr>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(mi => item.customer_fullname)
						</td>
						<td>
							@Html.DisplayFor(mi => item.customer_address)
						</td>
						<td>
							@Html.DisplayFor(mi => item.customer_phone)
						</td>
						<td>
							@Html.DisplayFor(mi => item.customer_gender)
						</td>
						<td>
							@Html.DisplayFor(mi => item.customer_joindate)
						</td>
						<td>
							@Html.DisplayFor(mi => item.trainer_name)
						</td>
						<td>
							@Html.DisplayFor(mi => item.plan_name)
						</td>
						<td>
							@Html.DisplayFor(mi => item.customer_username)
						</td>
						<td>
							@Html.DisplayFor(mi => item.customer_password)
						</td>


						<td width="300px">
							@if (HttpContext.Current.User.IsInRole("Admin"))
							{
								<i class="md md-mode-edit"></i>@Html.ActionLink("Edit", "Edit", "customer", new { id = item.customer_id.Trim() }, new { @class = "menu" })
								<span>!</span>
								<i class="md md-delete"></i>@Html.ActionLink("Delete", "Deletecustomer", "customer", new { id = item.customer_id.Trim() },
			   new
			   {
				   @class = "plan",
				   @onclick = "return confirm('Are you sure you wish to delete this customer?');"
			   }
			   )
								<span>!</span>
							}

							<i class="md md-details"></i>@Html.ActionLink("Details", "Details", "customer", new { id = item.customer_id.Trim() }, new { @class = "menu" })


						</td>















					</tr>
				}
			</table>
			</div>
		</div>
	</div>

			<hr style="width :100%;color :#008080;" />


