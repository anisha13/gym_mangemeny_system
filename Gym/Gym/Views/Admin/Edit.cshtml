@model Gym.Models.Entity.AdminEntity
@{
	ViewBag.Title = "Edit";
	Layout = "~/Views/Layout/_mainlayout.cshtml";
}


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken();
	@Html.HiddenFor(m => m.admin_id)
	<div class="row">
		<div class="col-sm-12 col-lg-12">
			<div class="card-box">
				<h3 style="color:#008080; margin-bottom:0px;"><i class="md md-mode-edit"></i> Edit Admin</h3>
				<div class="row">
					<div class="col-md-6">
						<form class="form-horizontal" role="form">
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.admin_fullname)</div>
									Name @Html.EditorFor(m => m.admin_fullname, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.admin_username)</div>
									Username @Html.EditorFor(m => m.admin_username, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group">
								<div class="col-xs-12">
									Password @Html.PasswordFor(m => m.admin_password, new { @class = "form-control" })
								</div>
							</div>
							<div class="form-group text-center m-t-40">
								<div class="col-xs-12">
									<button class="btn btn-primary btn-rounded waves-effect waves-light" type="submit">Edit</button>
								</div>
							</div>
							</form>
						</div>
					</div>
					</div>
				</div>
			</div>
				}

				<p>
					<i class="md md-arrow-back"></i> @Html.ActionLink("Back to Manager", "Index", "Admin", null, new { @class = "menu" })
				</p>

