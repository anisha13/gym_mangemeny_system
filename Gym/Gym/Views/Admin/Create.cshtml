@model Gym.Models.Entity.AdminEntity
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Layout/_mainlayout.cshtml";
}

<h3 style="color:#008080; margin-bottom:0px;">New Admin</h3>
<hr style="width :100%;color :#008080;" />

@using (Html.BeginForm("SaveAdmin", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken();
	<div class="row">
		<div class="col-sm-12 col-lg-12">
			<div class="card-box">
				<div class="row">
					<div class="col-md-6">
						<form class="form-horizontal" role="form">
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.admin_id)</div>
									Id @Html.EditorFor(m => m.admin_id, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.admin_fullname)</div>
									Name @Html.EditorFor(m => m.admin_fullname, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.admin_username)</div>
									Username @Html.EditorFor(m => m.admin_username, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
							<div class="form-group ">
								<div class="col-xs-12">
									<div>@Html.ValidationMessageFor(m => m.admin_password)</div>
									Password @Html.PasswordFor(m => m.admin_password, new { @class = "form-control"  })
								</div>
							</div>
							<div class="form-group text-center m-t-40">
								<div class="col-xs-12">
									<button class="btn btn-primary btn-rounded waves-effect waves-light" type="submit">Submit</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
}

<p>
    <i class="md md-arrow-back"></i> @Html.ActionLink("Back to Manager", "Index", "Admin", null, new { @class = "menu" })
</p>